


<% if @expenses_due.present?  %>
  <br>
  <h1>Expenses you Due</h1>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Divided amount</th>
      <th>Paid status</th>
      <th>Borrower</th>

    </tr>
    </thead>
    <tbody>
    <% @expenses_due.each do |expense| %>
      <% expense.expense_splits.each do |expense_split| %>
       <tr>
        <%=render 'expense',expense: expense,expense_split: expense_split,current_user: current_user %>
         <td><%= expense_split.user.username==current_user.username ? "You" : expense_split.user.username %></td>
         </td>
       </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
<%else %>
  <h2> No Expenses</h2>
<%end %>
<%=link_to 'Back',expenses_path,class: "btn btn-primary" %>